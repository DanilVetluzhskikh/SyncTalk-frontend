{
  "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "lib": ["dom", "esnext"],
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
          "@/*": ["./src/*"]
      },
  },
  "ts-node": {
      "compilerOptions": {
          "module": "CommonJS"
      }
  }
}